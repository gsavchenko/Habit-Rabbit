<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.honeycomb.habitrabbit.EditHabit_r2">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#24AFB2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.15"
            android:gravity="center"
            android:text="Edit Habit"
            android:textAppearance="@android:style/TextAppearance.Holo.WindowTitle"
            android:textSize="40sp" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:background="#24AFB2"
            android:src="@drawable/addhabit"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:background="#24AFB2"
            android:onClick="ShowSettings"
            android:src="@drawable/settings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Habit Profile Name"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtNameE"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#d3d3d3" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Description"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtDescE"
            android:layout_width="fill_parent"
            android:background="#d3d3d3"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Colour"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtColourE"
            android:layout_width="fill_parent"
            android:background="#d3d3d3"
            android:layout_height="40dp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Tracking Metric"
            android:textAlignment="textStart"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtMetricE"
            android:layout_width="fill_parent"
            android:background="#d3d3d3"
            android:layout_height="40dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnUpdateHabit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="#24AFB2"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:onClick="UpdateHabit"
        android:text="Update Habit" />

</LinearLayout>
